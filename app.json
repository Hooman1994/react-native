{
  "expo": {
    "name": "Charinet-App",
    "slug": "Charinet-App",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo_simple.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "jsEngine": "hermes",
    "ios": {
      "jsEngine": "jsc",
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo_simple.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hoomanium.reactnativeapp",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCirqmJA_er_Ai4CdxoOIAZQFTFB6rmCOg"
        }
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/IRANSansXFaNum-Regular.ttf"
          ]
        }
      ],
      [
        "expo-asset",
        {
          "packagerOpts": {
            "assetExts": [
              "svg",
              "png",
              "jpg",
              "jpeg"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "44e8dada-4b9d-439d-a3b2-7fae126b7227"
      }
    },
    "fonts": [
      "./assets/fonts/IRANSansX-Regular.ttf",
      "./assets/fonts/IRANSansX-Bold.ttf"
    ],
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    },
    "owner": "hoomanium"
  }
}
